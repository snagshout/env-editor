<?xml version="1.0"?>
<ruleset name="Snagshout Standard">
    <description>A custom coding standard for Snagshout</description>

    <file>config</file>
    <file>app</file>
    <file>tests</file>
    <rule ref="PSR2"/>
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions"
                      type="array"
                      value="delete=>unset,print=>echo,dd=>null" />
        </properties>
    </rule>
</ruleset>
